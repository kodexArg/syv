const collections = [
  { name: '0_proyecto', title: 'Proyecto' },
  { name: '1_trasfondo', title: 'Trasfondo' },
  { name: '2_atlas', title: 'Atlas' },
  { name: '3_personajes', title: 'Personajes' },
  { name: '4_diegesis', title: 'Di茅gesis' },
  { name: '5_aventuras', title: 'Aventuras' },
  { name: '6_media', title: 'Media' },
];

// Obtener documentos de cada colecci贸n
const collectionData = await Promise.all(
  collections.map(async (col) => {
    const entries = await getCollection(col.name as any);
