---
// Componente simplificado para toggle del sidebar
---

<button id="toggle-sidebar" class="bg-olive-600 text-white border-none w-8 h-8 rounded cursor-pointer flex items-center justify-center transition-colors duration-200 hover:bg-olive-700" title="Sidebar">
  <i id="sidebar-icon" class="fas fa-bars text-sm"></i>
</button>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggleButton = document.getElementById('toggle-sidebar');
    const sidebarIcon = document.getElementById('sidebar-icon');
    const sidebar = document.getElementById('sidebar');
    const main = document.getElementById('main-content');

    function updateIcon() {
      const isVisible = sidebar?.classList.contains('sidebar-open');
      
      if (sidebarIcon) {
        sidebarIcon.className = isVisible ? 'fas fa-times' : 'fas fa-bars';
        toggleButton?.setAttribute('title', isVisible ? 'Ocultar Sidebar' : 'Mostrar Sidebar');
      }
    }

    function closeSidebar() {
      sidebar?.classList.remove('sidebar-open');
      main?.classList.remove('main-with-sidebar');
      sessionStorage.setItem('sidebarClosedByUser', 'true');
      updateIcon();
    }

    function openSidebar() {
      sidebar?.classList.add('sidebar-open');
      main?.classList.add('main-with-sidebar');
      sessionStorage.removeItem('sidebarClosedByUser');
      updateIcon();
    }

    function toggleSidebar() {
      const willBeOpen = !sidebar?.classList.contains('sidebar-open');
      
      if (willBeOpen) {
        openSidebar();
      } else {
        closeSidebar();
      }
    }

    // Event listeners
    toggleButton?.addEventListener('click', toggleSidebar);
    
    if (sidebar) {
      sidebar.addEventListener('click', (event) => {
        const target = event.target as HTMLElement;
        const link = target.closest('a');
        
        if (link && link.href) {
          closeSidebar();
        }
      });
    }
    
    // Función para manejar cambios de tamaño de pantalla
    function handleResize() {
      const isDesktop = window.innerWidth >= 768;
      const wasClosedByUser = sessionStorage.getItem('sidebarClosedByUser') === 'true';
      
      if (isDesktop && !wasClosedByUser) {
        // Pantalla grande: mostrar sidebar automáticamente
        openSidebar();
      } else if (!isDesktop) {
        // Pantalla pequeña: ocultar sidebar automáticamente
        closeSidebar();
      }
    }
    
    // Event listener para cambios de tamaño de pantalla
    window.addEventListener('resize', handleResize);
    
    // Estado inicial
    handleResize();
  });
</script>